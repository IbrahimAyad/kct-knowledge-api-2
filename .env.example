# Server Configuration
PORT=3000
NODE_ENV=production

# API Authentication
API_KEY=kct-menswear-api-2024-secret

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_TYPE=postgresql
DATABASE_ENABLED=true

# Redis Configuration
REDIS_URL=redis://default:password@host:port
REDIS_ENABLED=true

# Fashion-CLIP API (Optional - disabled to save memory)
FASHION_CLIP_API_URL=https://fashion-clip-kct-production.up.railway.app
FASHION_CLIP_API_KEY=your_fashion_clip_api_key
FASHION_CLIP_ENABLED=false

# OpenAI Configuration (Voice & Chat)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ElevenLabs Configuration (Premium Voice)
ELEVEN_LABS_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ELEVEN_LABS_DEFAULT_VOICE_ID=DTKMou8ccj1ZaWGBiotd
ELEVEN_LABS_PROFESSIONAL_VOICE_ID=DTKMou8ccj1ZaWGBiotd

# Voice Service Configuration
VOICE_STT_PROVIDER=openai  # Options: openai, browser
VOICE_TTS_PROVIDER=elevenlabs  # Options: elevenlabs, openai, browser

# JWT Configuration (for future auth)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
CACHE_TTL=3600
MAX_REQUESTS_PER_MINUTE=1000
ENABLE_COMPRESSION=true

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# CORS
ALLOWED_ORIGINS=https://kct-menswear.vercel.app,https://kctmenswear.com,https://www.kctmenswear.com

